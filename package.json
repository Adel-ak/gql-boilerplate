{
  "name": "express-gql-ts",
  "version": "1.0.0",
  "description": "A express graphql server",
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf build && tsc -p tsconfig.build.json",
    "build:swc": "swc src --delete-dir-on-start -d build -D --include-dotfiles  --config-file .swcrc",
    "start:dev": "nodemon src/main.ts",
    "start": "node build/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pq": "pretty-quick",
    "sign-in": "ts-node-esm scripts/signin.ts",
    "sign-up": "ts-node-esm scripts/signup.ts",
    "gql-codegen": "graphql-codegen-esm --config codegen.yml",
    "config-husky": "husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "keywords": [
    "nodejs",
    "graphql",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "Adel-ak",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.6",
    "@graphql-tools/schema": "^9.0.4",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "aws-sdk": "^2.1223.0",
    "bunyan": "^1.8.15",
    "chalk": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-rate-limit": "^6.6.0",
    "firebase-admin": "^11.0.1",
    "graphql": "^16.6.0",
    "graphql-crunch": "^2.2.0",
    "graphql-modules": "^2.1.0",
    "graphql-rate-limit": "^3.3.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-scalars": "^1.18.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "16.0.2",
    "graphql-ws": "^5.11.2",
    "helmet": "^6.0.0",
    "ioredis": "^5.2.3",
    "joi": "^17.6.1",
    "mongoose": "^6.6.1",
    "mongoose-aggregate-paginate-v2": "^1.0.6",
    "mongoose-paginate-v2": "^1.7.1",
    "morgan": "^1.10.0",
    "nconf": "^0.12.0",
    "reflect-metadata": "^0.1.13",
    "signale": "^1.4.0",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^2.12.1",
    "@graphql-codegen/gql-tag-operations-preset": "^1.5.5",
    "@graphql-codegen/graphql-modules-preset": "^2.5.1",
    "@graphql-codegen/introspection": "^2.2.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-document-nodes": "^2.3.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.3",
    "@swc/helpers": "^0.4.11",
    "@types/bunyan": "^1.8.8",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/module-alias": "^2.0.1",
    "@types/mongoose-aggregate-paginate-v2": "^1.0.5",
    "@types/morgan": "^1.9.3",
    "@types/nconf": "^0.10.3",
    "@types/node": "^18.7.20",
    "@types/signale": "^1.4.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase": "^9.10.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": "16.17.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write .",
      "eslint . --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "volta": {
    "node": "16.17.0",
    "npm": "8.19.1",
    "yarn": "1.22.19"
  }
}
